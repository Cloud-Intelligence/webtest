---
export interface Props {
  title: string;
  subtitle?: string;
  description?: string;
}

const { title, subtitle, description } = Astro.props;
---

<section class="page-hero">
  <div class="hero-background">
    <div class="gradient-orb gradient-orb-1"></div>
    <div class="gradient-orb gradient-orb-2"></div>
    <div class="gradient-orb gradient-orb-3"></div>
  </div>
  
  <div class="hero-content">
    <h1 class="hero-title">{title}</h1>
    {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    {description && <p class="hero-description">{description}</p>}
  </div>
</section>

<style lang="scss">
  .page-hero {
    position: relative;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #040913;
    
    @media (max-width: 768px) {
      min-height: 300px;
    }
  }
  
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  
  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.6;
    animation: float 20s ease-in-out infinite;
    
    &.gradient-orb-1 {
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, #3366FF 0%, transparent 70%);
      top: -300px;
      left: -200px;
      animation-delay: 0s;
    }
    
    &.gradient-orb-2 {
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, #2952CC 0%, transparent 70%);
      bottom: -250px;
      right: -150px;
      animation-delay: 5s;
    }
    
    &.gradient-orb-3 {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, #87CEEB 0%, transparent 70%);
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      animation-delay: 10s;
    }
  }
  
  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }
  
  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 40px;
    
    @media (max-width: 768px) {
      padding: 0 24px;
    }
  }
  
  .hero-title {
    font-family: 'Manrope', sans-serif;
    font-weight: 700;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: #FFFFFF;
    margin: 0 0 16px 0;
    line-height: 1.2;
  }
  
  .hero-subtitle {
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    color: #3366FF;
    margin: 0 0 24px 0;
  }
  
  .hero-description {
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    margin: 0;
  }
</style>