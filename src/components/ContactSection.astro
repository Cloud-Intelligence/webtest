---
// Contact section component - Enhanced with shadcn form
import ContactForm from './ContactForm.tsx';
---

<footer id="contact" class="contact-section" role="contentinfo" aria-labelledby="contact-title">
  <div class="container">
    <h2 id="contact-title" class="section-title">Get In Touch</h2>
    <div class="contact-content">
      <div class="contact-info">
        <h3>Ready to get started?</h3>
        <p>Contact our team to learn how Cloud Intelligence can transform your business operations.</p>
        <div class="contact-details">
          <div class="contact-item">
            <strong>Email:</strong> hello@cloudintelligence.com
          </div>
          <div class="contact-item">
            <strong>Phone:</strong> +1 (555) 123-4567
          </div>
          <div class="contact-item">
            <strong>Address:</strong> 123 Cloud Street, San Francisco, CA 94105
          </div>
        </div>
      </div>
      <div class="contact-form">
        <ContactForm client:load />
      </div>
    </div>
    
    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-logo">
        <img src="/webtest/ci-logo.png" alt="Cloud Intelligence" />
        <span>Cloud Intelligence</span>
      </div>
      <div class="footer-links">
        <a href="/webtest/faq">FAQ</a>
        <a href="/webtest/privacy">Privacy Policy</a>
        <a href="/webtest/terms">Terms of Service</a>
      </div>
      <div class="footer-copy">
        <p>&copy; 2024 Cloud Intelligence. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>

<style lang="scss">
  .contact-section {
    background: #040913;
    color: white;
    padding: 100px 0 40px;
    
    @media (max-width: 768px) {
      min-height: 100vh;
      padding: 80px 0 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 40px;
      
      @media (max-width: 768px) {
        padding: 0 24px;
      }
    }
    
    .section-title {
      font-family: 'Inter', sans-serif;
      font-weight: 700;
      font-size: clamp(2rem, 4vw, 3rem);
      text-align: center;
      margin-bottom: 60px;
      color: white;
    }
    
    .contact-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      margin-bottom: 80px;
      
      @media (max-width: 768px) {
        grid-template-columns: 1fr;
        gap: 40px;
      }
    }
    
    .contact-info {
      h3 {
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 1.5rem;
        margin-bottom: 16px;
        color: white;
      }
      
      p {
        font-family: 'Inter', sans-serif;
        font-weight: 400;
        font-size: 1.1rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 32px;
      }
      
      .contact-details {
        .contact-item {
          font-family: 'Inter', sans-serif;
          font-size: 1rem;
          color: rgba(255, 255, 255, 0.8);
          margin-bottom: 16px;
          
          strong {
            color: white;
          }
        }
      }
    }
    
    .contact-form {
      display: flex;
      justify-content: center;
      align-items: flex-start;
    }
    
    .footer-bottom {
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      padding-top: 40px;
      display: grid;
      grid-template-columns: 1fr auto 1fr;
      align-items: center;
      gap: 24px;
      
      @media (max-width: 768px) {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 20px;
      }
      
      .footer-logo {
        display: flex;
        align-items: center;
        gap: 12px;
        
        img {
          width: 32px;
          height: 32px;
          border-radius: 6px;
        }
        
        span {
          font-family: 'Inter', sans-serif;
          font-weight: 600;
          font-size: 1.1rem;
          color: white;
        }
      }
      
      .footer-links {
        display: flex;
        gap: 32px;
        
        @media (max-width: 768px) {
          justify-content: center;
        }
        
        a {
          font-family: 'Inter', sans-serif;
          font-size: 0.9rem;
          color: rgba(255, 255, 255, 0.7);
          text-decoration: none;
          transition: color 0.3s ease;
          
          &:hover {
            color: white;
          }
        }
      }
      
      .footer-copy {
        text-align: right;
        
        @media (max-width: 768px) {
          text-align: center;
        }
        
        p {
          font-family: 'Inter', sans-serif;
          font-size: 0.9rem;
          color: rgba(255, 255, 255, 0.6);
          margin: 0;
        }
      }
    }
  }
</style>