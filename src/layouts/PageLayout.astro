---
import Layout from './Layout.astro';
import NavbarEnhanced from '../components/NavbarEnhanced.astro';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { 
  title = "Cloud Intelligence", 
  description = "Unlock the power of intelligent cloud solutions with our enterprise-grade platform",
  keywords = "cloud computing, cloud intelligence, enterprise software"
} = Astro.props;
---

<Layout 
  title={title}
  description={description}
  keywords={keywords}
>
  <NavbarEnhanced />
  
  <main class="page-content">
    <slot />
  </main>
</Layout>

<style>
  .page-content {
    padding-top: 120px;
    min-height: 100vh;
    background: #040913;
    
    @media (max-width: 768px) {
      padding-top: 100px;
    }
  }
</style>