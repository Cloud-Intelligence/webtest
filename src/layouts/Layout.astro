---
export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  showNavbar?: boolean;
}

const { 
  title = "Cloud Intelligence", 
  description = "Unlock the power of intelligent cloud solutions with our enterprise-grade platform",
  keywords = "cloud computing, cloud intelligence, enterprise software, cloud platform, data analytics",
  showNavbar = false
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://cloud-intelligence.github.io');

// Import styles
import '../styles/main.scss';
import Navbar from '../components/Navbar.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/logo.png', Astro.site || 'https://cloud-intelligence.github.io')} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL('/logo.png', Astro.site || 'https://cloud-intelligence.github.io')} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/webtest/logo.png" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Manrope:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    
    <!-- SCSS Styles -->
    
    <!-- Structured Data -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Cloud Intelligence",
        "url": "https://cloud-intelligence.github.io",
        "logo": "https://cloud-intelligence.github.io/logo.png",
        "description": "Enterprise cloud intelligence platform providing intelligent cloud solutions",
        "foundingDate": "2024",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "123 Cloud Street",
          "addressLocality": "San Francisco",
          "addressRegion": "CA",
          "postalCode": "94105",
          "addressCountry": "US"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+1-555-123-4567",
          "contactType": "customer service",
          "email": "hello@cloudintelligence.com"
        }
      }
    </script>
  </head>
  <body>
    {showNavbar && <Navbar />}
    <slot />
  </body>
</html>