---
import PageLayout from '../../layouts/PageLayout.astro';
import PageHero from '../../components/PageHero.astro';
import ContactSection from '../../components/ContactSection.astro';

const features = [
  {
    title: "Progressive Web Apps",
    description: "Build fast, reliable web applications that work offline and provide native app-like experiences across all devices.",
    icon: "üì±"
  },
  {
    title: "Real-time Applications",
    description: "Create interactive applications with live data updates, real-time collaboration, and instant synchronization.",
    icon: "‚ö°"
  },
  {
    title: "E-commerce Platforms",
    description: "Develop scalable online stores with secure payment processing, inventory management, and personalized shopping experiences.",
    icon: "üõí"
  },
  {
    title: "SaaS Solutions",
    description: "Build multi-tenant software platforms with subscription management, user authentication, and enterprise-grade security.",
    icon: "‚òÅÔ∏è"
  },
  {
    title: "Mobile-First Design",
    description: "Create responsive web applications optimized for mobile devices with touch-friendly interfaces and fast loading times.",
    icon: "üì≤"
  },
  {
    title: "API Development",
    description: "Design and implement robust RESTful APIs and GraphQL endpoints with comprehensive documentation and testing.",
    icon: "üîó"
  }
];
---

<PageLayout 
  title="Web Applications - Cloud Intelligence"
  description="Build modern, scalable web applications with cutting-edge technologies and user-centric design."
  keywords="web applications, progressive web apps, e-commerce, SaaS, API development, mobile-first"
>
  <PageHero 
    title="Web Applications"
    subtitle="Modern Digital Experiences"
    description="Create powerful, scalable web applications that engage users and drive business growth with cutting-edge technologies."
  />
  
  <section class="content-section">
    <div class="container">
      <div class="intro-content">
        <h2>Transform Your Digital Presence</h2>
        <p>
          Our web application development services combine modern frameworks, cloud-native architecture, 
          and user-centered design to create applications that scale with your business. From startup MVPs 
          to enterprise platforms, we deliver solutions that perform exceptionally across all devices and environments.
        </p>
      </div>
      
      <div class="features-grid">
        {features.map((feature) => (
          <div class="feature-card">
            <div class="feature-icon">{feature.icon}</div>
            <h3>{feature.title}</h3>
            <p>{feature.description}</p>
          </div>
        ))}
      </div>
      
      <div class="cta-section">
        <h2>Ready to Build Your Web Application?</h2>
        <p>Transform your ideas into powerful digital experiences</p>
        <a href="#contact" class="cta-button">Get Started</a>
      </div>
    </div>
  </section>
  
  <ContactSection />
</PageLayout>

<style lang="scss">
  .content-section {
    background: #040913;
    padding: 80px 0;
    
    @media (max-width: 768px) {
      padding: 60px 0;
    }
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
    
    @media (max-width: 768px) {
      padding: 0 24px;
    }
  }
  
  .intro-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 80px;
    
    h2 {
      font-family: 'Manrope', sans-serif;
      font-weight: 600;
      font-size: clamp(2rem, 4vw, 2.5rem);
      color: #FFFFFF;
      margin-bottom: 24px;
    }
    
    p {
      font-family: 'Inter', sans-serif;
      font-size: 1.125rem;
      line-height: 1.6;
      color: rgba(255, 255, 255, 0.8);
    }
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 32px;
    margin-bottom: 80px;
    
    @media (max-width: 768px) {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }
  
  .feature-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 32px;
    transition: all 0.3s ease;
    
    &:hover {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(255, 255, 255, 0.2);
      transform: translateY(-4px);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    }
    
    .feature-icon {
      font-size: 3rem;
      margin-bottom: 16px;
    }
    
    h3 {
      font-family: 'Inter', sans-serif;
      font-weight: 600;
      font-size: 1.25rem;
      color: #FFFFFF;
      margin-bottom: 12px;
    }
    
    p {
      font-family: 'Inter', sans-serif;
      font-size: 0.975rem;
      line-height: 1.6;
      color: rgba(255, 255, 255, 0.7);
    }
  }
  
  .cta-section {
    text-align: center;
    padding: 60px;
    background: rgba(51, 102, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(51, 102, 255, 0.2);
    border-radius: 24px;
    
    h2 {
      font-family: 'Manrope', sans-serif;
      font-weight: 600;
      font-size: clamp(1.75rem, 3vw, 2.25rem);
      color: #FFFFFF;
      margin-bottom: 16px;
    }
    
    p {
      font-family: 'Inter', sans-serif;
      font-size: 1.125rem;
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 32px;
    }
    
    .cta-button {
      display: inline-block;
      padding: 14px 32px;
      background: #3366FF;
      color: white;
      text-decoration: none;
      border-radius: 12px;
      font-family: 'Inter', sans-serif;
      font-weight: 500;
      font-size: 1rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 16px rgba(51, 102, 255, 0.3);
      
      &:hover {
        background: #2952CC;
        transform: translateY(-2px);
        box-shadow: 0 6px 24px rgba(51, 102, 255, 0.4);
      }
    }
  }
</style>