    p {
      font-family: 'Inter', sans-serif;
      font-size: 0.975rem;
      line-height: 1.6;
      color: rgba(255, 255, 255, 0.7);
    }
  }
  
  .cta-section {
    text-align: center;
    padding: 60px;
    background: rgba(51, 102, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(51, 102, 255, 0.2);
