        grid-template-columns: 1fr;
        gap: 30px;
        text-align: center;
      }

      .member-image {
        position: relative;

        img {
          width: 100%;
          height: 300px;
          object-fit: cover;
          border-radius: 12px;
        }

        .image-placeholder {
          width: 100%;
          height: 300px;
          background: linear-gradient(135deg, #3366FF 0%, #2952CC 100%);
          border-radius: 12px;
