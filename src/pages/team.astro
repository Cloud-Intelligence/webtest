    padding-top: 80px; // Account for fixed navbar
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  // Hero Section
  .team-hero {
    background: linear-gradient(135deg, #3366FF 0%, #2952CC 100%);
    color: white;
    padding: 80px 0 60px;
    
    h1 {
      font-family: 'Manrope', sans-serif;
      font-size: clamp(2.5rem, 5vw, 4rem);
      font-weight: 700;
