    padding: 80px 0;
    background: white;

    h2 {
      font-family: 'Manrope', sans-serif;
      font-size: 2.5rem;
      font-weight: 600;
      text-align: center;
      margin-bottom: 60px;
      color: #1a1a1a;
    }

    .leadership-grid {
      display: grid;
      gap: 60px;
      max-width: 1000px;
      margin: 0 auto;
    }

    .team-member.featured {
      display: grid;
      grid-template-columns: 300px 1fr;
      gap: 40px;
      background: #f8f9fa;
      padding: 40px;
      border-radius: 16px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);

