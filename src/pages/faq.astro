    max-width: 1000px;
    margin: 0 auto;
    padding: 0 20px;
  }

  // Hero Section
  .faq-hero {
    background: linear-gradient(135deg, #3366FF 0%, #2952CC 100%);
    color: white;
    padding: 80px 0 60px;
    
    h1 {
